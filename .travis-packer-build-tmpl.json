{
  "message": ":tada: :bomb: commit-range=%{commit_range_string}",
  "branch": "%{template}",
  "config": {
    "language": "generic",
    "dist": "trusty",
    "group": "edge",
    "sudo": true,
    "install": [
      "git clone --branch=%{branch} https://github.com/travis-ci/packer-templates.git",
      "pushd packer-templates && git checkout -qf %{commit_range_last} ; popd",
      "./packer-templates/bin/packer-build-install"
    ],
    "script": [
      "./packer-templates/bin/packer-build-script %{template}"
    ]
  }
}
