#!/usr/bin/env bash

set -o errexit

main() {
  local envdir=$(dirname "${1}")

  set +o xtrace
  for f in ${envdir}/* ; do
    eval "export $(basename $f)='$(cat $f)'"
  done

  if [[ ${DOCKER_CREDS} ]] ; then
    local prefix="$(echo ${DOCKER_CREDS} | tr '[:lower:]' '[:upper:]')"
    for varname in USERNAME PASSWORD SERVER ; do
      eval "export DOCKER_LOGIN_${varname}=\$${prefix}_DOCKER_LOGIN_${varname}"
    done
  fi

  [[ ${DOCKER_LOGIN_USERNAME} ]] || {
    __log Missing \$DOCKER_LOGIN_USERNAME
    exit 1
  }

  [[ ${DOCKER_LOGIN_PASSWORD} ]] || {
    __log Missing \$DOCKER_LOGIN_PASSWORD
    exit 1
  }

  [[ ${DOCKER_LOGIN_SERVER} ]] || {
    __log Missing \$DOCKER_LOGIN_SERVER
    exit 1
  }

  [[ ${DOCKER_DEST} ]] || {
    __log Missing \$DOCKER_DEST
  }

  __log 'msg="docker login"'
  docker login \
    -u "${DOCKER_LOGIN_USERNAME}" \
    -p "${DOCKER_LOGIN_PASSWORD}" \
    "${DOCKER_LOGIN_SERVER}"

  : ${DOCKER_PUSH_RETRIES:=2}
  : ${DOCKER_LOGOUT_POST_PUSH:=1}

  local attempt=0
  local sleep_interval=10
  local push_start

  while true ; do
    __log "msg=\"docker push\" attempt=$((attempt + 1))"
    push_start=$(date +%s)
    if docker push "${DOCKER_DEST}" ; then
      __log 'msg="docker push complete"' \
        "duration=$(($(date +%s) - push_start))s"

      if [[ ${DOCKER_LOGOUT_POST_PUSH} =~ true|yes|1 ]] ; then
        __log 'msg="docker logout"'
        docker logout "${DOCKER_LOGIN_SERVER}"
        __log 'msg="docker logout complete"'
      fi
      exit 0
    fi

    attempt=$((attempt + 1))

    if [[ $attempt > ${DOCKER_PUSH_RETRIES} ]] ; then
      break
    fi

    __log "msg=\"sleeping\" interval=$((attempt * sleep_interval))"
    sleep $((attempt * sleep_interval))
  done

  exit 86
}

__log() {
  echo "time=$(date -u +%Y-%m-%dT%H:%M:%SZ)" "$@"
}

main "$@"
