#!/usr/bin/env bash

set -o errexit

cd $(dirname $(dirname ${BASH_SOURCE[0]}))

mkdir -p tmp/
echo "${GCE_ACCOUNT_FILE_B64_BZ2}" | \
  base64 -d | \
  bunzip2 > tmp/gce.json

if [[ "x$(packer version 2>/dev/null)" != "xPacker v0.10.1" ]] ; then
  make install-packer
fi

if ! bats --version &>/dev/null ; then
  make install-bats
fi
